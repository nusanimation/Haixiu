        <Button Content="Start Emotion Detection" Height="46" HorizontalAlignment="Left" Margin="608,820,0,0" Name="startDetect" VerticalAlignment="Top" Width="243" Click="button4_Click" />
        <Label Content="Label" Height="33" HorizontalAlignment="Left" Margin="892,758,0,0" Name="AnnError" VerticalAlignment="Top" Width="216" />
        <TextBox Height="22" HorizontalAlignment="Left" Margin="524,765,0,0" Name="textBox1" VerticalAlignment="Top" Width="154" TextChanged="textBox1_TextChanged" />
        <Button Content="lookUp" Height="30" HorizontalAlignment="Left" Margin="682,761,0,0" Name="browsebtn" VerticalAlignment="Top" Width="49" Click="browsebtn_Click" />
    </Grid>
</Window>
