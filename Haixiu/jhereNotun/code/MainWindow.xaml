                    <Label Content="Sec" Height="29" Name="label114" Width="42" Grid.Row="1" Canvas.Left="456" Canvas.Top="118" />
                    <Label Content="Update features every" Height="29" Name="labe1l13" Width="128" Grid.Row="1" Canvas.Left="299" Canvas.Top="144" />
