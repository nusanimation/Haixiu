<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HaiXiu" Loaded="Window_Loaded" Closed="Window_Closed" IsEnabled="True" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="958" d:DesignWidth="1493" SizeToContent="WidthAndHeight" xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
xmlns:datavis="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
>

    <Window.Resources>
        <Style x:Key="menuLabel"  TargetType="{x:Type Label}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFAAAAAA"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" >
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                <GradientStop Color="White" Offset="0" />
                                <GradientStop Color="#FF3DB1F8" Offset="0.833" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>


            </Style.Triggers>

        </Style>
    </Window.Resources>

    <Grid Height="Auto" Width="Auto" Visibility="Visible" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="750"/>            
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="721*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="340"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        <Canvas Name="chartHolder" Height="579" Width="Auto"  Grid.Row="1" Grid.ColumnSpan="2">
            <chartingToolkit:Chart Name="lineChart" Background="White" BorderThickness="0" HorizontalAlignment="Stretch" Margin="12,0,12,419" Grid.Row="1" Width="1447" Height="267" Canvas.Left="-12" Canvas.Top="-5">
                <charting:Chart.LegendStyle>
                    <Style TargetType="datavis:Legend">
                        <Setter Property="Width" Value="0" />
                    </Style>
                </charting:Chart.LegendStyle>
                <chartingToolkit:LineSeries Grid.Column="1" Background="Blue" DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding}" IsSelectionEnabled="True" HorizontalAlignment="Stretch" />
                <chartingToolkit:Chart.Axes>
                    <chartingToolkit:LinearAxis Interval="10" Background="YellowGreen" Orientation="Y" Minimum="-1" Maximum="100" Title="Level of Arousal" ShowGridLines="True" />
                </chartingToolkit:Chart.Axes>
            </chartingToolkit:Chart>
            <charting:Chart Background="White" BorderThickness="0" Height="291" Margin="6,311,10,0" Name="featureChart" VerticalAlignment="Top" Grid.RowSpan="2" Canvas.Top="-15" Width="1464" Canvas.Left="-8">
                <charting:Chart.Axes>
                    <charting:LinearAxis Background="YellowGreen" Interval="0.1" Maximum="2" Minimum="-1" Orientation="Y" ShowGridLines="True" Title="Level of Arousal" />
                </charting:Chart.Axes>
                <charting:Chart.LegendStyle>
                    <Style TargetType="datavis:Legend">
                        <Setter Property="FrameworkElement.Width" Value="0" />
                    </Style>
                </charting:Chart.LegendStyle>

                
                <charting:LineSeries Background="Blue" DependentValuePath="Value" Grid.Column="1" HorizontalAlignment="Stretch" IndependentValuePath="Key" IsSelectionEnabled="True" ItemsSource="{Binding}" />
            </charting:Chart>
            
            <Label Content="Arousal:" Height="50" Name="label14" Width="154" FontSize="32" FontWeight="Bold" Grid.Row="1" Canvas.Left="1101" Canvas.Top="236" />
            <Label Content="..." Height="64" Name="outputLabel" Width="137" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" Canvas.Left="1288" Canvas.Top="234" />
            


        </Canvas>






        <Canvas Name="VisualizationCanvas" Height="Auto" Width="Auto" Grid.Column="1" Margin="0,0,-705,0">
            <Label Content="SensorAngle" Height="24" HorizontalAlignment="Left"  Name="label12" VerticalAlignment="Top" Width="53" FontSize="8" Canvas.Left="333" Canvas.Top="6" />
            <Slider Height="210" HorizontalAlignment="Left"  Name="slider1" VerticalAlignment="Top" Width="42" Orientation="Vertical" SmallChange="1" TickPlacement="Both" ValueChanged="slider1_ValueChanged" MouseLeave="slider1_MouseLeave" AutoToolTipPlacement="BottomRight" Canvas.Left="344" Canvas.Top="40" />
            <Canvas Height="244" HorizontalAlignment="Left"  Name="canvas1" VerticalAlignment="Top" Width="310" Canvas.Left="387" Canvas.Top="18">
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0" />
                        <GradientStop Color="#FE9BE863" Offset="0" />
                        <GradientStop Color="White" Offset="0.592" />
                        <GradientStop Color="#DF4D9600" Offset="0" />
                    </LinearGradientBrush>
                </Canvas.Background>
                
            </Canvas>
            <Canvas Name="canvas2" Background="#40484848" Canvas.Left="6" Canvas.Top="16" Height="235" Width="330"></Canvas>
            <Label Content="Kinect State" Height="27" Name="label2" Width="84" VerticalAlignment="Top" Canvas.Left="591" Canvas.Top="272" />
            <Image Name="image1" Stretch="Fill" Source="/Haixiu;component/images/red.png" ImageFailed="image1_ImageFailed"  Canvas.Left="662" Canvas.Top="277" Height="20" Width="24" />
            <CheckBox Content="Log Kinect Skele" Height="19" HorizontalAlignment="Left"  Name="checkBox1" VerticalAlignment="Top" Click="checkBox1_Click" Checked="checkBox1_Checked" Canvas.Left="230" Canvas.Top="277" />
            <Label Content="0" Height="28" HorizontalAlignment="Left"  Name="labelFrame" VerticalAlignment="Top" Width="91" Canvas.Left="68" Canvas.Top="272" />
            <Label Content="Frames" Height="28" HorizontalAlignment="Left"  Name="label5" VerticalAlignment="Top" Canvas.Left="6" Canvas.Top="272" />
            <Canvas Height="244" Name="vgaCanvas" Width="328" Background="Black" Canvas.Left="6" Canvas.Top="18" />
            <Label Content="spine pos: " Name="label1" FontSize="14" Canvas.Left="9" Canvas.Top="305" Width="680" Background="#FFE8E8E8" />

        </Canvas>









        <Canvas Name="mainCanvas" Grid.Row="0" Grid.Column="0">

            <Label Content="Emotion Detection System" Height="45" HorizontalAlignment="Left" Name="label11" VerticalAlignment="Top" Width="274" FontSize="22" FontWeight="Normal" Background="White" Foreground="#FFAAAAAA" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" FontFamily="Segoe UI" FontStyle="Normal" Margin="25,60,0,0" Canvas.Left="-11" Canvas.Top="-14" />

            <Label Content="Detect" Style="{StaticResource menuLabel}" Height="39" HorizontalAlignment="Left" Margin="37,146,0,0" Name="DetectMenu" VerticalAlignment="Top" Width="180" FontSize="20" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"  MouseEnter="DetectMenu_MouseEnter" MouseLeave="DetectMenu_MouseLeave" MouseLeftButtonUp="DetectMenu_MouseLeftButtonUp" Foreground="DeepSkyBlue">

            </Label>
            <Label Content="Record" Style="{StaticResource menuLabel}" FontSize="20" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="37,194,0,0" Name="RecordMenu" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="181" MouseLeftButtonUp="RecordMenu_MouseLeftButtonUp" Foreground="Gainsboro">

            </Label>
            <Label Content="Learn" Style="{StaticResource menuLabel}" FontSize="20" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="37,243,0,0" Name="LearnMenu" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="181" MouseLeftButtonUp="LearnMenu_MouseLeftButtonUp" Foreground="Gainsboro">

            </Label>

           
            <Canvas Name="learnCanvas">
                <Label Content="L e a r n i n g   M o d u l e " Name="label6" IsEnabled="False" Canvas.Left="567" Canvas.Top="88" Height="34" />

            <Label Content="Select Feature File" Height="23" Name="label7" Width="161" IsEnabled="False" Canvas.Left="273" Canvas.Top="136" />
            <TextBox Height="27" Name="textBox1" Width="255" TextChanged="textBox1_TextChanged" Canvas.Left="273" Canvas.Top="158" />
            <Button Content="lookUp" Height="30" Name="browsebtn" Width="49" Click="browsebtn_Click" Canvas.Left="534" Canvas.Top="158" />
            <Button Content="Start Learning" Height="46" Name="startLearning" Width="118" Click="button3_Click" Canvas.Left="592" Canvas.Top="146" />
            <Rectangle Height="64" Name="rectangle1" Stroke="Black" Width="247" StrokeThickness="0.5" Canvas.Left="276" Canvas.Top="205" />
            <Label Content="N/A" Height="33" Name="AnnError" Width="147" Canvas.Left="366" Canvas.Top="236" />
            <Label Content="Iterations" Height="28" Name="label3" Width="79" Canvas.Left="287" Canvas.Top="205" />
            <Label Content="0" Height="32" Name="iterCount" Width="71" Canvas.Left="366" Canvas.Top="205" />
            <Label Content="Error" Height="28" Name="label4" Width="56" Canvas.Left="287" Canvas.Top="241" />
            <Button Content="Save NewuralNet" Height="62" Name="saveANNbutn" Width="177" IsEnabled="False" Click="button1_Click_1" Canvas.Left="533" Canvas.Top="205" />
            </Canvas>

            
            
            
            <Canvas Name="recordCanvas">
                <Label Content="F e a t u r e   R e c o r d i n g   M o d u l e " Name="featurerecordingmoduleLabel" IsEnabled="False" Canvas.Left="486" Canvas.Top="88" />
                <TextBox FlowDirection="RightToLeft" Height="25" IsEnabled="False" Name="textBox2" Text="0" Width="77" Canvas.Left="416" Canvas.Top="157" />
                <CheckBox Content="Pleasure" Height="16" Name="valenceChkbx" Unchecked="valenceChkbx_Unchecked" Checked="valenceChkbx_Checked" Canvas.Left="416" Canvas.Top="135" />
                <TextBox Height="25" Name="arousalLev" Width="77" Text="0" FlowDirection="RightToLeft" Canvas.Left="522" Canvas.Top="157" />
                <CheckBox Content="Arousal" Height="16" Name="ArousalChkbx" IsChecked="True" Checked="ArousalChkbx_Checked" Unchecked="ArousalChkbx_Unchecked" Canvas.Left="522" Canvas.Top="135" />
                <TextBox Height="25" Name="valenceLev" Width="77" IsEnabled="False" FlowDirection="RightToLeft" Text="0" Canvas.Left="625" Canvas.Top="157" />
                <CheckBox Content="Dominance" Height="16" Name="checkBox2" Canvas.Left="625" Canvas.Top="135" />
                <CheckBox Content="Reduced Feature" Height="18" Name="reducedFeature" Width="110" IsChecked="True" Checked="reducedFeature_Checked" Unchecked="reducedFeature_Unchecked" Canvas.Left="416" Canvas.Top="275" />
                <Button Content="Record Feature" Height="50" Name="recordFeature" Width="142" Click="button1_Click" Canvas.Left="416" Canvas.Top="209" />
                <Button Content="Stop Record" Height="50" Name="stopRecord" Width="138" IsEnabled="False" Click="button2_Click" Canvas.Left="564" Canvas.Top="209" />
            </Canvas>

            <Canvas Name="detectCanvas">
                <Label Content="D e t e c t i n g   M o d u l e" IsEnabled="False" Name="label8" FlowDirection="RightToLeft" Grid.Row="1" Canvas.Left="558" Canvas.Top="88" />
                <Label Content="Select NeuralNet Data" Height="23" IsEnabled="False" Name="label9" Width="160" Grid.Row="1" Canvas.Left="315" Canvas.Top="143" />
                <TextBox Height="27" Name="loadANN" Width="206" Text="C:\Users\workshop\Desktop\data\savedNeuralNet.dat" Grid.Row="1" Canvas.Left="315" Canvas.Top="172" />
                <Button Content="lookUp" Height="30" Name="button2" Width="49" Click="button2_Click_1" Grid.Row="1" Canvas.Left="527" Canvas.Top="169" />
                <Button Content="Start Emotion Detection" Height="46" Name="startDetect" Width="187" Click="button4_Click" Grid.Row="1" Canvas.Left="527" Canvas.Top="202" />
                <CheckBox Content="Rapid Update" Height="24" Name="checkBox3" IsChecked="True" Checked="checkBox3_Checked" Unchecked="checkBox3_Unchecked" Grid.Row="1" Grid.Column="2" Canvas.Left="623" Canvas.Top="175" />
                <Button Content="Test" Height="24" Name="button1" Width="45" Click="button1_Click_2" Grid.Row="1" Canvas.Left="669" Canvas.Top="258" />
                <Label Content="calculation interval in Sec" Height="29" Name="label13" Width="153" Grid.Row="1" Canvas.Left="315" Canvas.Top="219" />
                <TextBox Height="27" Name="updateIntervalText" Width="50" Text="10" TextChanged="updateIntervalText_TextChanged" Grid.Row="1" Canvas.Left="471" Canvas.Top="221" />
            </Canvas>
        </Canvas>
    </Grid>

</Window>
