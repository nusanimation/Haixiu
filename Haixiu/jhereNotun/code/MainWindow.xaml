<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HaiXiu" Loaded="Window_Loaded" Closed="Window_Closed" IsEnabled="True" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="958" d:DesignWidth="1493" SizeToContent="WidthAndHeight" xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
xmlns:datavis="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
>

    <Window.Resources>
        <Style x:Key="menuLabel"  TargetType="{x:Type Label}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFAAAAAA"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" >
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                <GradientStop Color="White" Offset="0" />
                                <GradientStop Color="#FF3DB1F8" Offset="0.833" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Height="1084" Width="1471" Visibility="Visible" Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="260" />
        </Grid.RowDefinitions>
        
        
        <Rectangle Height="64" HorizontalAlignment="Left" Margin="262,241,0,0" Name="rectangle1" Stroke="Black" VerticalAlignment="Top" Width="247" StrokeThickness="0.5" />
        <Canvas Height="244" HorizontalAlignment="Left" Margin="1149,12,0,0" Name="canvas1" VerticalAlignment="Top" Width="310">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0" />
                    <GradientStop Color="#FE9BE863" Offset="0" />
                    <GradientStop Color="White" Offset="0.592" />
                    <GradientStop Color="#DF4D9600" Offset="0" />
                </LinearGradientBrush>
            </Canvas.Background>
            <Canvas Name="canvas2" Background="#40484848" Canvas.Left="862" Canvas.Top="266" Height="215" Width="585"></Canvas>
        </Canvas>
        <chartingToolkit:Chart Name="lineChart" Background="White" BorderThickness="0"  Height="198" HorizontalAlignment="Stretch" Margin="6,728,10,20">
            <charting:Chart.LegendStyle>
                <Style TargetType="datavis:Legend">
                    <Setter Property="Width" Value="0" />
                </Style>
            </charting:Chart.LegendStyle>
            <chartingToolkit:LineSeries Grid.Column="1" Background="Blue" DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding}" IsSelectionEnabled="True" HorizontalAlignment="Stretch"/>
            <chartingToolkit:Chart.Axes>
                <chartingToolkit:LinearAxis Interval="10" Background="YellowGreen" Orientation="Y" Minimum="-1" Maximum="100" Title="Level of Arousal" ShowGridLines="True" />
            </chartingToolkit:Chart.Axes>
        </chartingToolkit:Chart>
        <Slider Height="210" HorizontalAlignment="Left" Margin="1101,46,0,0" Name="slider1" VerticalAlignment="Top" Width="42" Orientation="Vertical" SmallChange="1" TickPlacement="Both" ValueChanged="slider1_ValueChanged" MouseLeave="slider1_MouseLeave" AutoToolTipPlacement="BottomRight" />
        <Button Content="Record Feature" Height="50" HorizontalAlignment="Left" Margin="582,36,0,0" Name="recordFeature" VerticalAlignment="Top" Width="118" Click="button1_Click" />
        <Button Content="Stop Record" Height="50" HorizontalAlignment="Left" Margin="582,0,0,797" Name="stopRecord" VerticalAlignment="Bottom" Width="118" IsEnabled="False" Click="button2_Click" />
        <CheckBox Content="Log Kinect Skele" Height="19" HorizontalAlignment="Left" Margin="1223,300,0,0" Name="checkBox1" VerticalAlignment="Top" Click="checkBox1_Click" Checked="checkBox1_Checked" />
        <Label Content="0" Height="28" HorizontalAlignment="Left" Margin="1223,262,0,0" Name="labelFrame" VerticalAlignment="Top" Width="91" />
        <Button Content="Start Learning" Height="46" HorizontalAlignment="Right" Margin="0,191,771,0" Name="startLearning" VerticalAlignment="Top" Width="118" Click="button3_Click" />
        <Button Content="Start Emotion Detection" Height="46" HorizontalAlignment="Left" Margin="299,705,0,0" Name="startDetect" VerticalAlignment="Top" Width="171" Click="button4_Click" />
        <Label Content="N/A" Height="33" HorizontalAlignment="Left" Margin="352,272,0,0" Name="AnnError" VerticalAlignment="Top" Width="147" />
        <TextBox Height="27" HorizontalAlignment="Left" Margin="262,206,0,0" Name="textBox1" VerticalAlignment="Top" Width="255" TextChanged="textBox1_TextChanged" />
        <Button Content="lookUp" Height="30" HorizontalAlignment="Left" Margin="523,202,0,0" Name="browsebtn" VerticalAlignment="Top" Width="49" Click="browsebtn_Click" />
        <Label Content="Iterations" Height="28" HorizontalAlignment="Left" Margin="273,241,0,0" Name="label3" VerticalAlignment="Top" Width="79" />
        <Label Content="0" Height="32" HorizontalAlignment="Left" Margin="352,241,0,0" Name="iterCount" VerticalAlignment="Top" Width="71" />
        <Label Content="Error" Height="28" HorizontalAlignment="Left" Margin="273,277,0,0" Name="label4" VerticalAlignment="Top" Width="56" />
        <Label Content="Frames" Height="28" HorizontalAlignment="Left" Margin="1149,262,0,0" Name="label5" VerticalAlignment="Top" />
        <Label Content="spine pos: " Name="label1" FontSize="14" Margin="733,262,328,649" />
        <Label Content="L e a r n i n g   M o d u l e " Name="label6" IsEnabled="False" Margin="543,162,771,746" />
        <Button Content="Save NewuralNet" Height="62" HorizontalAlignment="Right" Margin="0,243,771,0" Name="saveANNbutn" VerticalAlignment="Top" Width="177" IsEnabled="False" Click="button1_Click_1" />
        <TextBox Height="27" HorizontalAlignment="Left" Margin="25,725,0,0" Name="loadANN" VerticalAlignment="Top" Width="206" Text="C:\Users\workshop\Desktop\data\savedNeuralNet.dat" />
        <Button Content="lookUp" Height="30" HorizontalAlignment="Right" Margin="0,721,1185,0" Name="button2" VerticalAlignment="Top" Width="49" Click="button2_Click_1" />
        <Label Content="Select Feature File" Height="23" HorizontalAlignment="Left" Margin="262,162,0,0" Name="label7" VerticalAlignment="Top" Width="161" IsEnabled="False" />
        <Label Content="D e t e c t i n g   M o d u l e" IsEnabled="False" Margin="195,652,1001,255" Name="label8" FlowDirection="RightToLeft" />
        <Label Content="Select NeuralNet Data" Height="23" HorizontalAlignment="Left" IsEnabled="False" Margin="25,696,0,0" Name="label9" VerticalAlignment="Top" Width="160" />
        <Label Content="SensorAngle" Height="24" HorizontalAlignment="Left" Margin="1090,19,0,0" Name="label12" VerticalAlignment="Top" Width="53" FontSize="8" />
        <Label Content="..." Height="64" HorizontalAlignment="Center" Margin="975,691,358,191" Name="outputLabel" VerticalAlignment="Center" Width="137" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" />
        <Label Content="Kinect State" Height="22" Name="label2" Width="84" Margin="1359,295,28,0" VerticalAlignment="Top" />
        <Image Name="image1" Stretch="Fill" Source="/Haixiu;component/images/red.png" ImageFailed="image1_ImageFailed" Margin="1426,272,0,629" />
        <CheckBox Content="Arousal" Height="16" HorizontalAlignment="Left" Margin="385,82,0,0" Name="ArousalChkbx" VerticalAlignment="Top" IsChecked="True" Checked="ArousalChkbx_Checked" Unchecked="ArousalChkbx_Unchecked" />
        <CheckBox Content="Pleasure" Height="16" HorizontalAlignment="Right" Margin="0,82,1111,0" Name="valenceChkbx" VerticalAlignment="Top" Unchecked="valenceChkbx_Unchecked" Checked="valenceChkbx_Checked" />
        <TextBox Height="25" HorizontalAlignment="Left" Margin="380,101,0,0" Name="arousalLev" VerticalAlignment="Top" Width="62" Text="0" FlowDirection="RightToLeft" />
        <TextBox Height="25" HorizontalAlignment="Left" Margin="298,101,0,0" Name="valenceLev" VerticalAlignment="Top" Width="62" IsEnabled="False" FlowDirection="RightToLeft" Text="0" />
        <Label Content="Emotion Detection System" Height="45" HorizontalAlignment="Left" Name="label11" VerticalAlignment="Top" Width="274" FontSize="22" FontWeight="Normal" Background="White" Foreground="#FFAAAAAA" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" FontFamily="Segoe UI" FontStyle="Normal" Margin="25,60,0,0" />
        <CheckBox Content="Dominance" Height="16" HorizontalAlignment="Right" Margin="0,82,932,0" Name="checkBox2" VerticalAlignment="Top" />
        <TextBox FlowDirection="RightToLeft" Height="25" HorizontalAlignment="Right" IsEnabled="False" Margin="0,101,947,0" Name="textBox2" Text="0" VerticalAlignment="Top" Width="62" />
        <TextBox Height="27" HorizontalAlignment="Left" Margin="641,721,0,0" Name="updateIntervalText" VerticalAlignment="Top" Width="50" Text="10" TextChanged="updateIntervalText_TextChanged" />
        <Label Content="calculation interval in Sec" Height="29" HorizontalAlignment="Left" Margin="496,722,0,0" Name="label13" VerticalAlignment="Top" Width="153" />
        <CheckBox Content="Reduced Feature" Height="18" Name="reducedFeature" Width="110" Margin="454,46,907,882" IsChecked="True" Checked="reducedFeature_Checked" Unchecked="reducedFeature_Unchecked" />
        <Button Content="Test" Height="24" HorizontalAlignment="Left" Margin="425,675,0,0" Name="button1" VerticalAlignment="Top" Width="45" Click="button1_Click_2" />
        <Label Content="Arousal:" Height="50" HorizontalAlignment="Left" Margin="828,696,0,0" Name="label14" VerticalAlignment="Top" Width="154" FontSize="32" FontWeight="Bold" />
            <CheckBox Content="Rapid Update" Height="36" HorizontalAlignment="Left" Margin="709,722,0,0" Name="checkBox3" VerticalAlignment="Top" Width="128" IsChecked="True" Checked="checkBox3_Checked" Unchecked="checkBox3_Unchecked" />
        <Canvas Height="244" HorizontalAlignment="Left" Margin="756,12,0,0" Name="vgaCanvas" VerticalAlignment="Top" Width="328" />
        <Label Content="Detect" Style="{StaticResource menuLabel}" Height="39" HorizontalAlignment="Left" Margin="37,146,0,0" Name="DetectMenu" VerticalAlignment="Top" Width="180" FontSize="20" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="White" MouseEnter="DetectMenu_MouseEnter" MouseLeave="DetectMenu_MouseLeave">
                    <Label.Background>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="#FF3DB1F8" Offset="0.833" />
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Record" Style="{StaticResource menuLabel}" FontSize="20" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="37,194,0,0" Name="RecordMenu" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="181">

        </Label>
        <Label Content="Learn" Style="{StaticResource menuLabel}" FontSize="20" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="37,243,0,0" Name="LearnMenu" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="181">

        </Label>
        <charting:Chart Background="White" BorderThickness="0" Height="335" Margin="6,311,10,0" Name="featureChart" VerticalAlignment="Top">
            <charting:Chart.Axes>
                <charting:LinearAxis Background="YellowGreen" Interval="0.1" Maximum="2" Minimum="-1" Orientation="Y" ShowGridLines="True" Title="Level of Arousal" />
            </charting:Chart.Axes>
            <charting:Chart.LegendStyle>
                <Style TargetType="datavis:Legend">
                    <Setter Property="FrameworkElement.Width" Value="0" />
                </Style>
            </charting:Chart.LegendStyle>
            <charting:LineSeries Background="Blue" DependentValuePath="Value" Grid.Column="1" HorizontalAlignment="Stretch" IndependentValuePath="Key" IsSelectionEnabled="True" ItemsSource="{Binding}" />
        </charting:Chart>
    </Grid>

</Window>
