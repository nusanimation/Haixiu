                    <Label Content="The NeuralNet is at" Height="23" IsEnabled="False" Name="label9" Width="160" Grid.Row="1" Canvas.Left="301" Canvas.Top="220" />
                    <TextBox Height="23" Name="loadANN" Width="239" Text="C:\Users\workshop\Desktop\work\data\savedNeuralNet.dat" Grid.Row="1" Canvas.Left="415" Canvas.Top="222" />
                    <Button Content="lookUp" Height="30" Name="button2" Width="49" Click="button2_Click_1" Grid.Row="1" Canvas.Left="660" Canvas.Top="219" />
                    <Button Content="Start Emotion Detection" Height="46" Name="startDetect" Width="187" Click="button4_Click" Grid.Row="1" Canvas.Left="522" Canvas.Top="252" />
                    <CheckBox Content="Rapid Update" Height="24" Name="checkBox3" IsChecked="True" Checked="checkBox3_Checked" Unchecked="checkBox3_Unchecked" Grid.Row="1" Grid.Column="2" Canvas.Left="561" Canvas.Top="176" />
