                                <GradientStop Color="White" Offset="0" />
                            </LinearGradientBrush>
                        </charting:LinearAxis.Background>
                    </chartingToolkit:LinearAxis>
                </chartingToolkit:Chart.Axes>
            </chartingToolkit:Chart>
        </Grid>

    </Grid>

</Window>
