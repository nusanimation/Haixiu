                    <Label Content="Sec" Height="29" Name="label1114" Width="42" Grid.Row="1" Canvas.Left="450" Canvas.Top="145" />
                    <Label Content="Calculate Emotion in every" Height="29" Name="labe2l13" Width="163" Grid.Row="1" Canvas.Left="299" Canvas.Top="171" />
                    <TextBox Height="22" Name="gfDelay" Width="25" Text="2"  Grid.Row="1" Canvas.Left="451" Canvas.Top="172" />
                    <Label Content="Sec" Height="29" Name="labe21114" Width="42" Grid.Row="1" Canvas.Left="480" Canvas.Top="170" />

