                    <Label Content="Points" Height="29" Name="labe21115" Width="42" Grid.Row="1" Canvas.Left="658" Canvas.Top="150" />
                </Canvas>


            </Canvas>




            <Canvas Name="VisualizationCanvas" Height="Auto" Width="Auto" Grid.Column="2"  Grid.Row="1">
                <Label Content="SensorAngle" Height="24" HorizontalAlignment="Left"  Name="label12" VerticalAlignment="Top" Width="53" FontSize="8" Canvas.Left="333" Canvas.Top="6" />
