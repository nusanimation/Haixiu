<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HaiXiu" Loaded="Window_Loaded" Closed="Window_Closed" IsEnabled="True" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="958" d:DesignWidth="1493" SizeToContent="WidthAndHeight" xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
xmlns:datavis="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
>

    <Window.Resources>
        <Style x:Key="menuLabel"  TargetType="{x:Type Label}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFAAAAAA"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" >
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                <GradientStop Color="White" Offset="0" />
                                <GradientStop Color="#FF3DB1F8" Offset="0.833" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Height="Auto" Width="Auto" Visibility="Visible" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="750"/>            
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="721*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="340"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        <Canvas Name="chartHolder" Height="579" Width="Auto"  Grid.Row="1" Grid.ColumnSpan="2">
            <chartingToolkit:Chart Name="lineChart" Background="White" BorderThickness="0" HorizontalAlignment="Stretch" Margin="12,0,12,419" Grid.Row="1" Width="1447" Height="267" Canvas.Left="-12" Canvas.Top="-5">
                <charting:Chart.LegendStyle>
                    <Style TargetType="datavis:Legend">
                        <Setter Property="Width" Value="0" />
                    </Style>
                </charting:Chart.LegendStyle>
                <chartingToolkit:LineSeries Grid.Column="1" Background="Blue" DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding}" IsSelectionEnabled="True" HorizontalAlignment="Stretch" />
                <chartingToolkit:Chart.Axes>
                    <chartingToolkit:LinearAxis Interval="10" Background="YellowGreen" Orientation="Y" Minimum="-1" Maximum="100" Title="Level of Arousal" ShowGridLines="True" />
                </chartingToolkit:Chart.Axes>
            </chartingToolkit:Chart>
            <charting:Chart Background="White" BorderThickness="0" Height="291" Margin="6,311,10,0" Name="featureChart" VerticalAlignment="Top" Grid.RowSpan="2" Canvas.Top="-15" Width="1464" Canvas.Left="-8">
                <charting:Chart.Axes>
                    <charting:LinearAxis Background="YellowGreen" Interval="0.1" Maximum="2" Minimum="-1" Orientation="Y" ShowGridLines="True" Title="Level of Arousal" />
                </charting:Chart.Axes>
                <charting:Chart.LegendStyle>
                    <Style TargetType="datavis:Legend">
                        <Setter Property="FrameworkElement.Width" Value="0" />
                    </Style>
                </charting:Chart.LegendStyle>

                
                <charting:LineSeries Background="Blue" DependentValuePath="Value" Grid.Column="1" HorizontalAlignment="Stretch" IndependentValuePath="Key" IsSelectionEnabled="True" ItemsSource="{Binding}" />
            </charting:Chart>
            
            <Label Content="D e t e c t i n g   M o d u l e" IsEnabled="False" Margin="195,181,1001,394" Name="label8" FlowDirection="RightToLeft" Grid.Row="1" Canvas.Left="-170" Canvas.Top="69" />
            <Label Content="Arousal:" Height="50" Name="label14" Width="154" FontSize="32" FontWeight="Bold" Grid.Row="1" Canvas.Left="1101" Canvas.Top="236" />
            <Label Content="..." Height="64" Name="outputLabel" Width="137" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" Canvas.Left="1288" Canvas.Top="234" />
            <TextBox Height="27" Name="loadANN" Width="206" Text="C:\Users\workshop\Desktop\data\savedNeuralNet.dat" Grid.Row="1" Canvas.Left="195" Canvas.Top="259" />
            <TextBox Height="27" Name="updateIntervalText" Width="50" Text="10" TextChanged="updateIntervalText_TextChanged" Grid.Row="1" Canvas.Left="880" Canvas.Top="250" />
            <Label Content="calculation interval in Sec" Height="29" Name="label13" Width="153" Grid.Row="1" Canvas.Left="733" Canvas.Top="251" />
            <Button Content="Start Emotion Detection" Height="46" Name="startDetect" Width="171" Click="button4_Click" Grid.Row="1" Canvas.Left="498" Canvas.Top="240" />
            <Button Content="Test" Height="24" Name="button1" Width="45" Click="button1_Click_2" Grid.Row="1" Canvas.Left="682" Canvas.Top="254" />
            <Button Content="lookUp" Height="30" Name="button2" Width="49" Click="button2_Click_1" Grid.Row="1" Canvas.Left="428" Canvas.Top="251" />
            <Label Content="Select NeuralNet Data" Height="23" IsEnabled="False" Name="label9" Width="160" Grid.Row="1" Canvas.Left="195" Canvas.Top="236" />
        </Canvas>






        <Canvas Name="VisualizationCanvas" Height="Auto" Width="Auto" Grid.Column="1" Margin="0,0,-705,0">
            <Label Content="SensorAngle" Height="24" HorizontalAlignment="Left"  Name="label12" VerticalAlignment="Top" Width="53" FontSize="8" Canvas.Left="333" Canvas.Top="6" />
            <Slider Height="210" HorizontalAlignment="Left"  Name="slider1" VerticalAlignment="Top" Width="42" Orientation="Vertical" SmallChange="1" TickPlacement="Both" ValueChanged="slider1_ValueChanged" MouseLeave="slider1_MouseLeave" AutoToolTipPlacement="BottomRight" Canvas.Left="344" Canvas.Top="40" />
            <Canvas Height="244" HorizontalAlignment="Left"  Name="canvas1" VerticalAlignment="Top" Width="310" Canvas.Left="387" Canvas.Top="18">
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0" />
                        <GradientStop Color="#FE9BE863" Offset="0" />
                        <GradientStop Color="White" Offset="0.592" />
                        <GradientStop Color="#DF4D9600" Offset="0" />
                    </LinearGradientBrush>
                </Canvas.Background>
                <Canvas Name="canvas2" Background="#40484848" Canvas.Left="862" Canvas.Top="266" Height="215" Width="585"></Canvas>
            </Canvas>
            <Label Content="Kinect State" Height="27" Name="label2" Width="84" VerticalAlignment="Top" Canvas.Left="591" Canvas.Top="272" />
            <Image Name="image1" Stretch="Fill" Source="/Haixiu;component/images/red.png" ImageFailed="image1_ImageFailed"  Canvas.Left="662" Canvas.Top="277" Height="20" Width="24" />
            <CheckBox Content="Log Kinect Skele" Height="19" HorizontalAlignment="Left"  Name="checkBox1" VerticalAlignment="Top" Click="checkBox1_Click" Checked="checkBox1_Checked" Canvas.Left="230" Canvas.Top="277" />
            <Label Content="0" Height="28" HorizontalAlignment="Left"  Name="labelFrame" VerticalAlignment="Top" Width="91" Canvas.Left="68" Canvas.Top="272" />
            <Label Content="Frames" Height="28" HorizontalAlignment="Left"  Name="label5" VerticalAlignment="Top" Canvas.Left="6" Canvas.Top="272" />
            <Canvas Height="244" Name="vgaCanvas" Width="328" Background="Black" Canvas.Left="6" Canvas.Top="18" />
            <Label Content="spine pos: " Name="label1" FontSize="14" Canvas.Left="9" Canvas.Top="305" Width="680" Background="#FFE8E8E8" />

        </Canvas>









        <Canvas Name="mainCanvas" Grid.Row="0" Grid.Column="0">


            <Rectangle Height="64" HorizontalAlignment="Left" Margin="262,241,0,0" Name="rectangle1" Stroke="Black" VerticalAlignment="Top" Width="247" StrokeThickness="0.5" />




            <Button Content="Record Feature" Height="50" HorizontalAlignment="Left" Margin="582,36,0,0" Name="recordFeature" VerticalAlignment="Top" Width="118" Click="button1_Click" Canvas.Left="27" Canvas.Top="15" />
            <Button Content="Stop Record" Height="50" HorizontalAlignment="Left" Margin="582,0,0,935" Name="stopRecord" VerticalAlignment="Bottom" Width="118" IsEnabled="False" Click="button2_Click" Canvas.Left="27" Canvas.Top="101" />
            <Button Content="Start Learning" Height="46" HorizontalAlignment="Right" Margin="0,191,771,0" Name="startLearning" VerticalAlignment="Top" Width="118" Click="button3_Click" Canvas.Left="601" Canvas.Top="11" />
            <Label Content="N/A" Height="33" HorizontalAlignment="Left" Margin="352,272,0,0" Name="AnnError" VerticalAlignment="Top" Width="147" />
            <TextBox Height="27" HorizontalAlignment="Left" Margin="262,206,0,0" Name="textBox1" VerticalAlignment="Top" Width="255" TextChanged="textBox1_TextChanged" />
            <Button Content="lookUp" Height="30" HorizontalAlignment="Left" Margin="523,202,0,0" Name="browsebtn" VerticalAlignment="Top" Width="49" Click="browsebtn_Click" />
            <Label Content="Iterations" Height="28" HorizontalAlignment="Left" Margin="273,241,0,0" Name="label3" VerticalAlignment="Top" Width="79" />
            <Label Content="0" Height="32" HorizontalAlignment="Left" Margin="352,241,0,0" Name="iterCount" VerticalAlignment="Top" Width="71" />
            <Label Content="Error" Height="28" HorizontalAlignment="Left" Margin="273,277,0,0" Name="label4" VerticalAlignment="Top" Width="56" />
            <Label Content="L e a r n i n g   M o d u l e " Name="label6" IsEnabled="False" Margin="543,162,771,884" />
            <Button Content="Save NewuralNet" Height="62" HorizontalAlignment="Right" Margin="0,243,771,0" Name="saveANNbutn" VerticalAlignment="Top" Width="177" IsEnabled="False" Click="button1_Click_1" Canvas.Left="523" Canvas.Top="16" />
            <Label Content="Select Feature File" Height="23" HorizontalAlignment="Left" Margin="262,162,0,0" Name="label7" VerticalAlignment="Top" Width="161" IsEnabled="False" />
            <CheckBox Content="Arousal" Height="16" HorizontalAlignment="Left" Margin="385,82,0,0" Name="ArousalChkbx" VerticalAlignment="Top" IsChecked="True" Checked="ArousalChkbx_Checked" Unchecked="ArousalChkbx_Unchecked" Canvas.Left="62" Canvas.Top="7" />
            <CheckBox Content="Pleasure" Height="16" HorizontalAlignment="Right" Margin="0,82,1111,0" Name="valenceChkbx" VerticalAlignment="Top" Unchecked="valenceChkbx_Unchecked" Checked="valenceChkbx_Checked" Canvas.Left="361" Canvas.Top="0" />
            <TextBox Height="25" HorizontalAlignment="Left" Margin="380,101,0,0" Name="arousalLev" VerticalAlignment="Top" Width="62" Text="0" FlowDirection="RightToLeft" Canvas.Left="67" Canvas.Top="14" />
            <TextBox Height="25" HorizontalAlignment="Left" Margin="298,101,0,0" Name="valenceLev" VerticalAlignment="Top" Width="62" IsEnabled="False" FlowDirection="RightToLeft" Text="0" Canvas.Left="225" Canvas.Top="14" />
            <Label Content="Emotion Detection System" Height="45" HorizontalAlignment="Left" Name="label11" VerticalAlignment="Top" Width="274" FontSize="22" FontWeight="Normal" Background="White" Foreground="#FFAAAAAA" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" FontFamily="Segoe UI" FontStyle="Normal" Margin="25,60,0,0" Canvas.Left="-11" Canvas.Top="-14" />
            <CheckBox Content="Dominance" Height="16" HorizontalAlignment="Right" Margin="0,82,932,0" Name="checkBox2" VerticalAlignment="Top" Canvas.Left="523" Canvas.Top="7" />
            <TextBox FlowDirection="RightToLeft" Height="25" HorizontalAlignment="Right" IsEnabled="False" Margin="0,101,947,0" Name="textBox2" Text="0" VerticalAlignment="Top" Width="62" Canvas.Left="361" Canvas.Top="14" />


            <CheckBox Content="Reduced Feature" Height="18" Name="reducedFeature" Width="110" Margin="454,46,907,1020" IsChecked="True" Checked="reducedFeature_Checked" Unchecked="reducedFeature_Unchecked" />


            <Label Content="Detect" Style="{StaticResource menuLabel}" Height="39" HorizontalAlignment="Left" Margin="37,146,0,0" Name="DetectMenu" VerticalAlignment="Top" Width="180" FontSize="20" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="White" MouseEnter="DetectMenu_MouseEnter" MouseLeave="DetectMenu_MouseLeave">
                <Label.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="White" Offset="0" />
                        <GradientStop Color="#FF3DB1F8" Offset="0.833" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <Label Content="Record" Style="{StaticResource menuLabel}" FontSize="20" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="37,194,0,0" Name="RecordMenu" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="181">

            </Label>
            <Label Content="Learn" Style="{StaticResource menuLabel}" FontSize="20" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="37,243,0,0" Name="LearnMenu" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="181">

            </Label>

        </Canvas>
        <CheckBox Content="Rapid Update" Height="24" Name="checkBox3" IsChecked="True" Checked="checkBox3_Checked" Unchecked="checkBox3_Unchecked" Grid.Row="1" Grid.Column="2" Margin="197,254,420,301" />
    </Grid>

</Window>
